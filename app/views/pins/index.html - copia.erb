<p id="notice"><%= notice %></p>

<h1>Lista de Todos los Pins.</h1>

 
    <% @pins.each do |pin| %>
      
         <%= pin.name %> 
         
         <%= image_tag(pin.photo, class: 'img-responsive') %>  
         <%= pin.description %> 
         <%= link_to 'Show', pin %> 
         <%= link_to 'Edit', edit_pin_path(pin) %> 
         <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'estas seguro?' } %> 
       
    <% end %>
   
 

<br>


<% if user_signed_in? %>

  <%= link_to 'New Pin', new_pin_path %>

<% end %>


