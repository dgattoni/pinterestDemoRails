<h1>Muestra los pins del Usuario <%= @user_id %></h1>

 
<p id="notice"><%= notice %></p>   

   <!-- iteramos los pins del usuario x.
   se comunica con el metodo pinsof del controller pins_controller.rb -->

    <% @pins.each do |pin| %>
      <div class="col-md-3">
          <div class="thumbnail">
              <p><strong><%= pin.name %></strong></p>                  
               <%= image_tag(pin.photo, class:'img-responsive') %>
              <p><%= pin.description %></p>       
                
           </div><!-- //cierra thumbnail-->
        </div>  <!-- //cierra col-md-3-->
    <% end %> 



 

